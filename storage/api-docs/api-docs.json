                                "schema": {
                                    "$ref": "#/components/schemas/ProductoResource"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/productos/delete/{id}": {
            "get": {
                "tags": [
                    "Productos"
                ],

                    "Productos"
                ],
                "summary": "Mostrar productos",
                "description": "Retorna la lista de productos",
                "operationId": "App\\Http\\Controllers\\ProductoController::getProductos",
                "responses": {
                    "200": {
                        "description": "Successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductoResource"
                                }
                            }
                        }
                    }
                }
